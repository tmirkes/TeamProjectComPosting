<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>comPosting</display-name>

  <!-- ********************************************************************* -->
  <!-- Context Parameters ************************************************** -->
  <!-- ********************************************************************* -->
  <context-param>
    <description>The email address of the administrator, used to send error reports.</description>
    <param-name>webmaster</param-name>
    <param-value>tlmirkes@madisoncollege.edu</param-value>
  </context-param>

  <!-- ********************************************************************* -->
  <!-- Servlet and JSP Configurations ************************************** -->
  <!-- ********************************************************************* -->
  <servlet>
    <servlet-name>SearchManager</servlet-name>
    <servlet-class>controller.SearchManager</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TrafficControl</servlet-name>
    <servlet-class>controller.TrafficControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RESTfulComPost</servlet-name>
    <servlet-class>controller.appConfig</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>controller</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>ResourceRouter</servlet-name>
    <servlet-class>controller.ResourceRouter</servlet-class>
  </servlet>


  <!-- ********************************************************************* -->
  <!-- Servlet Mappings **************************************************** -->
  <!-- ********************************************************************* -->
  <servlet-mapping>
    <servlet-name>SearchManager</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TrafficControl</servlet-name>
    <url-pattern>/redirect</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RESTfulComPost</servlet-name>
    <url-pattern>/comPosting</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ResourceRouter</servlet-name>
    <url-pattern>/routing</url-pattern>
  </servlet-mapping>

  <!-- ********************************************************************* -->
  <!-- Home Page *********************************************************** -->
  <!-- ********************************************************************* -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
